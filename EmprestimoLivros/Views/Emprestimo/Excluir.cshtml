@model EmprestimosModel;
@{
    ViewData["Title"] = "Excluir Empréstimo";
}

<div class="container bg-dark p-5 rounded-5">

    <div class="text-center">
        <h1 class="text-light">Excluir empréstimo</h1>
    </div>

    <form method="POST" asp-controller="Emprestimo" asp-action="Excluir">


        <h2 class="text-light text-center">Você tem certeza que deseja excluir esse empréstimo?</h2>


        <div class="mb-3">
            <label for="Recebedor" class="form-label text-light">Recebedor</label>
            <input type="text" class="form-control" asp-for="Recebedor" id="Recebedor" placeholder="Quem está recebendo o livro?" disabled>
            <span class="text-danger" asp-validation-for="Recebedor"></span>
        </div>
        <div class="mb-3">
            <label for="Fornecedor" class="form-label text-light">Fornecedor</label>
            <input type="text" class="form-control" asp-for="Fornecedor" id="Fornecedor" placeholder="Quem está fornecendo o livro?" disabled>
            <span class="text-danger" asp-validation-for="Fornecedor"></span>

        </div>
        <div class="mb-3">
            <label for="LivroEmprestado" class="form-label text-light">Livro emprestado</label>
            <input type="text" class="form-control" asp-for="LivroEmprestado" id="LivroEmprestado" placeholder="Qual é o livro emprestado?" disabled>
            <span class="text-danger" asp-validation-for="LivroEmprestado"></span>
        </div>

        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-danger w-50">Excluir</button>
            <a class="btn btn-primary w-50" asp-area="" asp-controller="Emprestimo" asp-action="Index">Voltar</a>
        </div>
    </form>

</div>